<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовая тема приложения -->
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/kolsa_purple</item>
        <item name="colorPrimaryDark">@color/kolsa_purple</item>
        <item name="colorAccent">@color/kolsa_pink</item>

        <!-- Цвет фона -->
        <item name="android:windowBackground">@color/kolsa_background</item>

        <!-- Цвет текста -->
        <item name="android:textColorPrimary">@color/kolsa_text_primary</item>
        <item name="android:textColorSecondary">@color/kolsa_text_secondary</item>

        <!-- Стандартная поддержка ActionBar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Статусбар -->
        <item name="android:statusBarColor">@color/kolsa_purple</item>
    </style>

</resources>
